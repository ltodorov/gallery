{
  "name": "gallery",
  "private": "true",
  "version": "1.0.0",
  "description": "A script for generating static HTML photo and video galleries",
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.30.0+sha512.2b5753de015d480eeb88f5b5b61e0051f05b4301808a82ec8b840c9d2adf7748eb352c83f5c1593ca703ff1017295bc3fdd3119abb9686efc96b9fcb18200937",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clean": "rimraf dist public/index.html",
    "compile": "tsc",
    "build": "node dist/index.js",
    "lint": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "all": "pnpm compile && pnpm build",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ltodorov/gallery.git"
  },
  "author": "Lyubomir Todorov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ltodorov/gallery/issues"
  },
  "homepage": "https://github.com/ltodorov/gallery#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@tsconfig/node-lts": "^24.0.0",
    "@tsconfig/strictest": "^2.0.8",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/node": "^24.10.13",
    "@vitest/coverage-v8": "^4.0.18",
    "html-minifier-terser": "^7.2.0",
    "lefthook": "^2.1.1",
    "rimraf": "^6.1.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "lefthook"
    ]
  }
}
